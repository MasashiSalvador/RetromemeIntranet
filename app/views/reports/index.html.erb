<h1>Listing reports</h1>

<table>
  <tr>
    <th>User</th>
    <th>Workingday</th>
    <th>Worktimebegin</th>
    <th>Worktimeend</th>
    <th>Breaktime</th>
    <th>Totalworktime</th>
    <th>Issue</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.user %></td>
    <td><%= report.workingDay %></td>
    <td><%= report.worktimeBegin %></td>
    <td><%= report.worktimeEnd %></td>
    <td><%= report.breaktime %></td>
    <td><%= report.totalWorkTime %></td>
    <td><%= report.issue %></td>
    <td><%= report.comment %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

