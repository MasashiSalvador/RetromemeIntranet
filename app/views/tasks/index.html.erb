<h1>Listing tasks</h1>

<table>
  <tr>
    <th>User</th>
    <th>Taskday</th>
    <th>Projectname</th>
    <th>Categoryname</th>
    <th>Project</th>
    <th>Category</th>
    <th>Issue</th>
    <th>Issuetitle</th>
    <th>Spendtime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.user %></td>
    <td><%= task.taskDay %></td>
    <td><%= task.projectName %></td>
    <td><%= task.categoryName %></td>
    <td><%= task.project %></td>
    <td><%= task.category %></td>
    <td><%= task.issue %></td>
    <td><%= task.issueTitle %></td>
    <td><%= task.spendTime %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

